{
  "name": "typescript-library-template",
  "version": "0.0.1",
  "description": "Template for creating TypeScript libraries",
  "license": "MIT",
  "author": "Adam Jones (domdomegg)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "prettier --parser typescript \"{src,test}/**/*.ts\" -l",
    "lint:fix": "prettier --parser typescript \"{src,test}/**/*.ts\" --write",
    "clean": "rm -rf dist",
    "build": "tsc",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
